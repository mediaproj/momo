<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_my_waiting_song_container"
    android:layout_height="200dp"
    android:layout_width="200dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/round_corner_white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:background="@drawable/round_corner_white"
        android:id="@+id/iv_main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_artwork_1"/>
    <RelativeLayout
        android:background="#66000000"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_marginTop="54.5dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/noto_sans_kr_bold_hestia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="15sp"
        android:text="제목"/>

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/tv_main_vote_ratio"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:text="예매율 52.9%"
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        />

</RelativeLayout>

